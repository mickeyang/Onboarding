@model Onboarding.Models.Fruit
@{
    ViewBag.Title = "EditFruit";
}
<span id="fruitId">@Html.DisplayFor(m => m.Id)</span>
<style>
    #fruitId {
        display: none;
    }
</style>

<div data-bind="with:Fruit">
    <h2>Edit Fruit</h2>
    <hr />
    <p><b>Product Code</b></p>
    <p data-bind="text:Id"></p>
    <p><b>Product Name</b></p>
    <input type="text" data-bind="value:Name,valueUpdate:'afterkeydown'" required /> <span data-bind="text:Name"></span>
    <p><b>Description</b></p>
    <input type="text" data-bind="value:Description,valueUpdate:'afterkeydown'" required /> <span data-bind="text:Description"></span>
    <p><b>Price</b></p>
    <input type="text" data-bind="value:Price,valueUpdate:'afterkeydown'" required /> <span data-bind="text:Price"></span>
    <p><b>Image</b></p>
    <input type="text" data-bind="value:Image,valueUpdate:'afterkeydown'" required />
    <br />
    <button class="btn btn-lg btn-primary" data-bind="click:$root.editFruit">Update</button>
</div>
<div>
    <span id="note"></span>
</div>
<script>
    var model = new ViewModel();
    model.loadData();
    ko.applyBindings(model);
</script>

