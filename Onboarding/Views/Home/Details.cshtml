@model Onboarding.Models.Fruit
@{
    ViewBag.Title = "FruitDetail";
}
<span id="fruitId">@Html.DisplayFor(m => m.Id)</span>
<style>#fruitId{display:none;}</style>

<div data-bind="with:Fruit">
    <h2 data-bind="text:name"></h2>
    <hr />
    <dl class="dl-horizontal">
        <dt>Code</dt>
        <dd data-bind="text:id"></dd>
        <dt>Description</dt>
        <dd data-bind="text:description"></dd>
        <dt>Price</dt>
        <dd data-bind="text:price"></dd>
        <dt>Image</dt>
        <dd data-bind="text:image"></dd>
    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
    @Html.ActionLink("Back to List", "Index")
</p>

<script>
    ko.applyBindings(new ViewModel());
</script>




