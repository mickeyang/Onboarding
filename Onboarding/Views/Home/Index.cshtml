@model List<Onboarding.Models.Fruit>

@{
    ViewBag.Title = "MickeyFruit";
}
<link href="https://fonts.googleapis.com/css?family=Permanent+Marker" rel="stylesheet">

<div class="jumbotron">
    <h1 style="margin-left:340px;">Welcome to <br />Mickey Fruit</h1>
    @*<p class="lead">ASP.NET is a free web framework for building great Web sites and Web applications using HTML, CSS and JavaScript.</p>*@
</div>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.FirstOrDefault().Id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FirstOrDefault().Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FirstOrDefault().Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FirstOrDefault().Price)
        </th>
        <th>Action</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)

            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                $@Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                <button class="btn btn-default btn-primary" onclick="location.href='@Url.Action("Details", "Home", new { id = item.Id })'">Details</button>
                <button class="btn btn-default btn-success" onclick="location.href='@Url.Action("Edit", "Home", new { id = item.Id })'">Update</button>
                <button class="btn btn-default btn-danger" onclick="location.href='@Url.Action("Delete", "Home", new { id = item.Id })'">Delete</button>
            </td>
        </tr>
    }
</table>


